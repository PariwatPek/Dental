<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imgView1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/tv1"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_icn_heal_root_teeth"
            android:background="@drawable/round_button"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="300dp"
            android:layout_height="280dp"
            android:layout_below="@+id/imgView1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#FFFFFF"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="รักษารากฟัน ทำ 2 ครั้ง ครั้งละ 1 ชั่วโมง
- ฟันหน้า 3,000-4,000 บาท
- ฟันกรามน้อย 4,000-5,000 บาท
- ฟันกรามใหญ่ 8,000-9,000 บาท" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv1"
            android:layout_below="@+id/tv1"
            android:layout_gravity="right"
            android:layout_marginTop="24dp"
            android:background="#009688"
            android:text="CONFIRM"
            android:textColor="#FFFFFF" />

    </RelativeLayout>
</RelativeLayout>