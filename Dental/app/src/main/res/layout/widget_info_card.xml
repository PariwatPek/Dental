<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/customView_paddingTop_fiveDP">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/customView_titleColor"
        android:padding="@dimen/screen_padding_sixteen"
        android:textSize="@dimen/customView_title_textSize"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/screen_padding_sixteen"
        android:textColor="#333333"
        android:textSize="@dimen/customView_content_textSize"
        android:layout_marginBottom="@dimen/customView_content_marginBottom_fifteen"/>

</LinearLayout>